# Banco de Dados (PostgreSQL)
POSTGRES_USER=nba_user
POSTGRES_PASSWORD=nba_password
POSTGRES_DB=nba_score_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# pgAdmin
PGADMIN_EMAIL=admin@nbascore.local
PGADMIN_PASSWORD=admin

# API-Sports (NBA v2)
API_SPORTS_KEY=your_api_sports_key_here
API_SPORTS_BASE_URL=https://v2.nba.api-sports.io

# Backend / FastAPI
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_ENV=development

# Origem do frontend (se necessário para CORS futuramente)
FRONTEND_ORIGIN=http://localhost:8000

# Airflow
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__FERNET_KEY=replace_with_generated_fernet_key
AIRFLOW__CORE__DAGS_ARE_PAUSED_AT_CREATION=True
AIRFLOW__CORE__LOAD_EXAMPLES=False

# Credenciais Airflow Web UI
AIRFLOW_ADMIN_USERNAME=airflow
AIRFLOW_ADMIN_PASSWORD=airflow
AIRFLOW_ADMIN_EMAIL=airflow@nbascore.local

# Conexão DB para Airflow (ex: postgres backend)
AIRFLOW_DB_USER=nba_user
AIRFLOW_DB_PASSWORD=nba_password
AIRFLOW_DB_NAME=airflow_db
AIRFLOW_DB_HOST=postgres
AIRFLOW_DB_PORT=5432

# LLM / Chatbot (Gemini)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL_NAME=gemini-1.5-pro

# OpenAI (Fallback opcional)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL_NAME=gpt-4o-mini

# Misc / Observabilidade
LOG_LEVEL=INFO